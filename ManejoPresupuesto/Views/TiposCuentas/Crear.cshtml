@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear tipo de cuenta</h1>
<h2>El tipo de cuenta se refiere a como podemos agrupar cuentas.
    Ejemplo: Prestamos, Tarjetas de credito, etc.
</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
